---
const languageList = [
    {
        id: 1,
        name: "Javascript",
        description: "Programming Language",
        image: "/images/logo/javascript.svg",
        alt: "Javascript logo"
    },
    {
        id : 2,
        name: "React",
        description: "Javascript Library",
        image: "/images/logo/react.svg",
        alt: "React logo"
    },
    {
        id : 3, 
        name : "Astro",
        description: "Javascript Framework",
        image: "/images/logo/astro.svg",
        alt: "Astro logo"
    }, 
    // { 
    //     id : 4,
    //     name : "Tailwind",
    //     description: "CSS Framework",
    //     image : "/images/logo/tailwind.svg",
    //     alt: "Tailwind logo"
        
        
    // }
];
---
<div class="h-full max-w-full bg-zinc-800 p-2 rounded-lg flex flex-col">
    <div class="flex-1 bg-zinc-900 rounded-lg text-white ">
        <div class="flex gap-2 p-4 items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-zinc-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75a4.5 4.5 0 01-4.884 4.484c-1.076-.091-2.264.071-2.95.904l-7.152 8.684a2.548 2.548 0 11-3.586-3.586l8.684-7.152c.833-.686.995-1.874.904-2.95a4.5 4.5 0 016.336-4.486l-3.276 3.276a3.004 3.004 0 002.25 2.25l3.276-3.276c.256.565.398 1.192.398 1.852z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.867 19.125h.008v.008h-.008v-.008z" />
            </svg>
            <p class="text-zinc-400 text-md">Language</p>
        </div>
        <div class="p-4">
            <div class="rounded-lg bg-zinc-800 w-full h-fit p-2">
                {languageList.map(langue => (
                    <div class="flex gap-4 p-2 hover:bg-zinc-700 rounded-lg">
                        <img src={langue.image} alt={langue.alt} class="w-12 h-12 rounded-lg" />
                        <div class="flex flex-col justify-center">
                            <p class="font-semibold text-lg">{langue.name}</p>
                            <p class="font-light text-sm">{langue.description}</p>
                        </div>
                    </div>      
                ))}
            </div>
        </div>
    </div>
</div>