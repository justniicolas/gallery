---
import Layout from '../layouts/Layout.astro';
import ToolsBar from '../components/tools/toolsbar.astro';
import LanguageBar from '../components/tools/languagebar.astro';
import Work from '../components/tools/work.astro';
import SocialMedia from '../components/socialmedia.astro';
import Project from '../components/tools/project.astro'
import Blog from '../components/tools/blog.astro';
---
<Layout title="Nicolas Becharat">
	<main>
		<div class="grid lg:grid-cols-12 lg:grid-rows-11 lg:gap-8 gap-y-8 p-8">
			<div class="lg:col-span-8 lg:row-span-2">
				<div class="h-full max-w-full bg-zinc-800 p-2 rounded-lg flex flex-col">
					<div class="flex-1 bg-zinc-900 rounded-lg text-white relative flex flex-col justify-center">
						<figure class="max-w-screen-md m-auto text-center p-4">
							<svg class="w-10 h-10 mx-auto mb-3 text-gray-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 14">
								<path d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"/>
							</svg>
							<blockquote>
								<p class="text-2xl italic font-medium text-white">"The best way to predict the future is to create it"</p>
							</blockquote>
							<figcaption class="flex items-center justify-center mt-6 space-x-3">
								<img class="w-6 h-6 rounded-full" src="https://ruizhealytimes.com/wp-content/uploads/2014/10/steve-jobs.jpg" alt="profile picture">
								<div class="flex items-center divide-x-2 divide-gray-500 ">
									<cite class="pr-3 font-medium text-white">Steve Jobs</cite>
									<cite class="pl-3 text-sm text-gray-400">CEO at Apple</cite>
								</div>
							</figcaption>
						</figure>
					</div>
				</div>
			</div>
			<div class="lg:col-span-4 lg:row-span-2 lg:col-start-9">
				<div class="h-full max-w-full bg-zinc-800 p-2 rounded-lg flex flex-col">
					<div class="flex-1 bg-zinc-900 rounded-lg text-white relative ">
						<div class="bg-transparent absolute bottom-4 left-4">
							<h1 class="text-4xl font-bold">Nicolas Becharat</h1>
							<p class="text-lg font-light text-zinc-400">Paris, France</p>
						</div>
						<img src="/images/profil.jpg" class="h-full w-full rounded-lg object-cover" alt="profil">
					</div>
				</div>
			</div>
			<div class="lg:col-span-6 lg:row-span-3 lg:col-start-7 lg:row-start-3">
				<Work />
			</div>
			<div class="lg:col-span-3 lg:row-span-3 lg:col-start-1 lg:row-start-3">
				<ToolsBar />
			</div>
			<div class="lg:col-span-3 lg:row-span-3 lg:col-start-4 lg:row-start-3">
				<LanguageBar />
			</div>
			<div class="lg:col-span-9 lg:row-span-3 lg:row-start-6"><Project /></div>
			<div class="lg:col-span-3 lg:row-span-3 lg:col-start-10 lg:row-start-6"><SocialMedia /></div>
			<div class="lg:col-span-6 lg:row-span-3 lg:row-start-9"><Blog /></div>
    		<div class="lg:col-span-6 lg:row-span-3 lg:col-start-7 lg:row-start-9"><SocialMedia /></div>
</div>
		</div>
	</main>
</Layout>
