<div class="h-full max-w-full bg-zinc-800 p-2 rounded-lg flex flex-col"id="container">
    <div class="flex-1 bg-zinc-900 rounded-lg text-white">
        <div class="flex gap-2 p-6 text-zinc-400 h-max items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
            </svg>
            <p class="text-md">Blog</p>
            <a href="https://npmbytes.com">
                <div class="group hidden rounded-2xl border bg-zinc-800 border-transparent shadow-md hover:shadow-2xl hover:text-zinc-400 items-center py-1 px-2 gap-x-1 opacity-0 duration-300 transition-all text-zinc-500 ease-in cursor-pointer text-xs" id="link">
                    Viewing<span class="text-zinc-300 group-hover:text-white duration-300 ease-in">Blog</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                    </svg>
                </div>
            </a>
        </div>
        <div class=" rounded-lg">
            <img src="" alt="">
        </div>
    </div>
</div>
<script>
    const container = document.getElementById('container');
    const link = document.getElementById('link');
    
    container.addEventListener('mouseenter', () => {
        link.classList.remove('opacity-0'); 
        link.classList.remove('hidden');
        link.classList.add('flex');
    });

    container.addEventListener('mouseleave', () => {
        link.classList.add('opacity-0'); 
        setTimeout(() => {
            link.classList.remove('flex');
            link.classList.add('hidden');
        }, 300);
    });
</script>


